@page
@model ECommerceApp.Pages.Account.LoginModel
@{ ViewData["Title"] = "Login"; }

<h1>Login</h1>
@if (!User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-xs-6 col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button class="btn btn-lg btn-info btn-block btn-login font-weight-bold" type="submit">Login</button>
            </form>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated)
{ 
<h2> You're logged in! Please continue shopping or close the window to end your session. </h2>
}