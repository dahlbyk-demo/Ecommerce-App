@page
@model ECommerceApp.Views.Account.RegisterModel

<h1>Register</h1>

<div class="page-header">
    <div class="alert alert-info" role="alert">
        <strong>Hi there!</strong> If you have already registered, please use the Login page.
    </div>
</div>

<div class="row">
    <div class="col-xs-6 col-md-4">
        <form method="post">
            <h2>Create a New Account!</h2>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>
            <button class="btn btn-lg btn-info btn-block btn-login font-weight-bold" type="submit">Sign in</button>
        </form>
    </div>
</div>
