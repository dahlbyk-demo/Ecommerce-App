@model IEnumerable<ECommerceApp.Models.Product>

@{ ViewData["Title"] = "Product List"; }

<h1>Product List</h1>

@if (User.IsInRole("Administrator"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>}


@foreach (var item in Model)
{
<div class="card" style="width: 288px;">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Price)</h6>
        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
        <a class="card-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <a class="card-link" asp-action="Details" asp-route-id="@item.Id">Details</a>
        <a class="card-link" asp-action="Add to Cart" asp-route-id="@item.Id">Add to Cart</a>
    </div>
</div>}

@foreach (var item in Model)
{
<tr>
    <td>

        @if (User.IsInRole("Administrator"))
        {
<text>|</text> <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <text>|</text> <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>}
    </td>
</tr>}
